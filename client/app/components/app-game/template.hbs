{{game-players round=round
  isClosed=(not (or hasToJoin isMenuOpen))}}

{{game-question question=round.question
  isHidden=(or hasToJoin isMenuOpen)}}

{{game-menu-button action=(action "toggle")
  isHidden=hasToJoin
  isClosed=(not isMenuOpen)}}

{{game-join-button action=(action "join")
  isHidden=(not hasToJoin)}}

{{game-answers round=round
  isHidden=(or hasToJoin isMenuOpen)
  on-submit=(action "submit")
  on-acknowledge=(action on-acknowledge)}}
